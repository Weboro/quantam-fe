---
import pages from "@/data/pages.js";
import ContainerLayout from "@/layouts/ContainerLayout.astro";
---

<div class="border-b border-b-brand-primary/60 mb-6">
<ContainerLayout size="base" className="flex items-center justify-between py-4">
  <!-- Logo -->
  <a href="/" class="flex items-center gap-2 hover:opacity-80 transition-opacity">
    <img src="/logo.png" alt="MySite Logo" class="h-12 w-auto" />
  </a>

  <nav class="flex gap-6 items-center" role="navigation" aria-label="Main navigation">
    {pages.map((page) =>
      page.subPages ? (
        <div class="relative group">
          <button 
            class="text-base font-semibold hover:text-[var(--color-brand-primary)] transition-colors flex items-center gap-1 py-2"
            aria-haspopup="true"
            aria-expanded="false"
          >
            {page.name}
            <svg
              class="w-4 h-4 mt-[1px] transition-transform group-hover:rotate-180"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              viewBox="0 0 24 24"
              aria-hidden="true"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M19 9l-7 7-7-7"
              />
            </svg>
          </button>
          
          <!-- Dropdown Menu -->
          <div class="absolute z-50 left-0 mt-1 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 bg-white border border-gray-200 rounded-lg shadow-lg min-w-[180px] py-1">
            {page.subPages.map((sub) => (
              <a
                href={`/${page.slug}/${sub.slug}`}
                class="flex items-center gap-2 px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 hover:text-[var(--color-brand-primary)] whitespace-nowrap transition-colors first:rounded-t-lg last:rounded-b-lg"
              >
                {sub.icon && <i class={sub.icon} aria-hidden="true" />}
                {sub.name}
              </a>
            ))}
          </div>
        </div>
      ) : (
        <a
          href={`/${page.slug}`}
          class="text-base font-semibold hover:text-[var(--color-brand-primary)] transition-colors py-2"
        >
          {page.name}
        </a>
      )
    )}
  </nav>
</ContainerLayout>
</div>

<style>
  .group:hover .group-hover\:opacity-100 {
    opacity: 1;
    visibility: visible;
  }
  
  /* Better mobile responsiveness */
  @media (max-width: 768px) {
    nav {
      display: none; 
    }
  }
</style>