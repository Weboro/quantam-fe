---
import Layout from "@/layouts/Layout.astro";
import courses from "@/data/courses";
import ContainerLayout from "@/layouts/ContainerLayout.astro";
---

<Layout
  title="Courses - Quantum Institute"
  description="Explore our wide range of skill-based, career-focused courses."
  slug="courses"
>
  <ContainerLayout size="sm">
    <section class="py-8">
      <h2 class="text-2xl font-bold mb-6">All Courses</h2>

      <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
        {
          courses.map((course) => (
            <a
              href={`/courses/${course.slug}`}
              class="block rounded overflow-hidden border hover:shadow transition duration-200 group"
            >
              <img
                src={course.heroImage}
                alt={course.name}
                class="w-full h-48 object-cover group-hover:scale-[1.02] transition"
              />
              <div class="p-4">
                <h3 class="text-lg font-semibold text-[var(--color-brand-primary)]">
                  {course.name}
                </h3>
                <p class="text-sm text-gray-600 line-clamp-3">
                  {course.description}
                </p>
                <div class="text-xs text-gray-400 mt-2">
                  {course.level} â€¢ {course.duration}
                </div>
              </div>
            </a>
          ))
        }
      </div>
    </section>
  </ContainerLayout>
</Layout>
